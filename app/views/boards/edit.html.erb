<% provide(:title, "EDIT BOARD") %>
<% provide(:button_text, "update") %>

<h1>edit board</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@board) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :info %>
      <%= f.text_area :info, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-lg" %>
    <% end %>

    <p>
      <%= link_to "back to board", board_path(@board) %>
    </p>

  </div>
</div>
