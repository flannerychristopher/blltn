<% provide(:title, "EDIT BOARD") %>

<h1>edit board</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@board) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :info %>
      <%= f.text_area :info, class: 'form-control' %>

      <%= f.submit "update board", class: "btn btn-lg" %>
    <% end %>

      <%= button_to "delete board", @board, method: :delete,
                                    class: 'btn btn-lg',
                                    data: { confirm: "are you sure?" } %>

      <%= button_to "back to board", board_path(@board),
                                     method: :get, class: "btn btn-lg" %>

  </div>
</div>
