<%= form_with model: board, remote: true do |f| %>

  <%= render 'shared/error_messages', object: board %>

  <%= f.label :name, "board name" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :info,"board info" %>
  <%= f.text_area :info, class: 'form-control' %>

 <%= f.submit (button_text || 'update'), class: "btn btn-lg" %>

<% end %>

<% if action_name == 'edit' %>
  <%= button_to "delete board", @board, method: :delete,
                remote: true,
                class: 'btn btn-lg btn-danger',
                data: { confirm: "are you sure?" } %>
<% end %>