<% provide(:title, user.name.upcase) %>

<div class="row">

  <div class="col-md-4">

    <h1>
      <%= user.name.gsub(/[aeiou]|\s+/i, '').upcase %>
    </h1>

    <%= render user, user: user %>

    <% if user.boards.any? %>
      <%= render 'boards/boards.html', boards: user.boards %>
    <% end %>

  </div>

  <div class="col-md-8">

      <div id="userposts">
        <%= render user.posts if user.posts.any? %>
      </div>

  </div>
</div>
