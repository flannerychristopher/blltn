<% provide(:title, @user.name.upcase) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">

      <h1>
        <%= @user.name.gsub(/[aeiou]|\s+/i, '').upcase %>
      </h1>
        <p>
          <%= @user.name %>
          <br><%= image_tag current_user.avatar.url if current_user.avatar? %>
        </p>

        <p>
          joined <%= time_ago_in_words(@user.created_at) %> ago
        <br>
          last active <%= time_ago_in_words(@user.updated_at) %> ago
        </p>

        <h1>about</h1>
        <% if current_user == @user %>
          <%= link_to "edit", edit_user_path(current_user) %>
        <% end %>

        <p>
          <%= @user.bio %>
        </p>

        <h1>boards</h1>
          <ul>
            <% @user.boards.each do |board| %>
              <li>
                <%= link_to "#{board.name}", board_path %>
              </li>
            <% end %>
          </ul>


    </section>
  </aside>
</div>
