<% provide(:title, @user.name.upcase) %>

<div class="row">

  <div class="col-md-4">

    <h1>
      <%= @user.name.gsub(/[aeiou]|\s+/i, '').upcase %>
    </h1>

    <%= render @user, user: @user %>

    <%= render 'boards/boards', boards: @boards %>

  </div>

  <div class="col-md-8">

    <% if @user.posts.any? %>
      <div id="userposts">
        <%= render @posts %>
      </div>
    <% end %>

  </div>
</div>
