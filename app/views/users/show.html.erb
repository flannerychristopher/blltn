<% provide(:title, @user.name.upcase) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">

      <h1>
        <%= @user.name.gsub(/[aeiou]|\s+/i, '').upcase %>
      </h1>
        <p>
          <%= @user.name %>
          <br>joined <%= time_ago_in_words(@user.created_at) %> ago
          <br><%= image_tag @user.avatar.url if @user.avatar? %>
        </p>

        <h3>about</h3>
        <% if current_user == @user %>
          <%= link_to "edit", edit_user_path(@user) %>
        <% end %>

        <p>
          <%= @user.bio %>
        </p>

        <% if @admin_boards.any? %>
          <h3>admin boards</h3>

          <%= render 'boards/boards', boards: @admin_boards %>
        <% end %>

        <% if @user.boards.any? %>
          <h3>Boards</h3>
          <%= render @boards %>
        <% end %>

    </section>
  </aside>

  <aside class="col-md-8">

    <% if @user.posts.any? %>
      <div id="userposts">
        <%= render @posts %>
      </div>
    <% end %>

  </aside>
</div>
