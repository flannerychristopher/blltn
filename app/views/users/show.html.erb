<% provide(:title, @user.name.upcase) %>

<div class="row">
  <aside class="col-md-4">
    <section class="user_info">

      <h1>
        <%= @user.name.gsub(/[aeiou]|\s+/i, '').upcase %>
      </h1>
        <p>
          <%= @user.name %>
          <br><%= image_tag @user.avatar.url if @user.avatar? %>
        </p>

        <p>
          joined <%= time_ago_in_words(@user.created_at) %> ago
        <br>
          last active <%= time_ago_in_words(@user.updated_at) %> ago
        </p>

        <h3>about</h3>
        <% if current_user == @user %>
          <%= link_to "edit", edit_user_path(@user) %>
        <% end %>

        <p>
          <%= @user.bio %>
        </p>

        <% if @adminmemberships.any? %>
          <h3>admin boards</h3>
            <ol>
              <% @adminmemberships.each do |membership| %>
                <li>
                  <%= link_to "#{membership.board.name}", board_path(membership.board) %>
                </li>
              <% end %>
            </ol>
        <% end %>

        <% if @user.boards.any? %>
          <h3>Boards</h3>
          <ol>
            <%= render @boards %>
          </ol>
        <% end %>

    </section>
  </aside>

  <aside class="col-md-8">

    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>) </h3>
      <ol>
        <%= render @posts %>
      </ol>
    <% end %>

  </aside>
</div>
