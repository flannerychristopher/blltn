<% provide(:title, "EDIT") %>
<% provide(:button_text, "update") %>

<h1>edit</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :bio,"bio (optional)" %>
      <%= f.text_area :bio, class: 'form-control' %>

      <%= f.submit yield(:button_text), class: "btn btn-lg" %>
    <% end %>
  </div>
</div>
