<div id="post-<%= post.id %>" class='row'>
  <%= form_with model: post, remote: true, class: 'form-inline' do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>

    <div class='col-md-9'>
      <%= f.text_area :content, 
                      id: "post-content",
                      style: "height: 100px" %>
    </div>
    
    <% if post.new_record? %>
      <%= hidden_field_tag "post[board_id]", board_id %>
    <% else %>
      <%= hidden_field_tag("post[id]", post.id) %>
    <% end %>
    
    <div class='col-md-3'>
      <%= f.submit "Post", class: "form-control btn" %>
    </div>
  <% end %>
</div>